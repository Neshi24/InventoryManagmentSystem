pipeline {
    agent any
    triggers {
        pollSCM('* * * * *')
    }
    environment {
        DOCKER_HOME = 'C:/Program Files/Docker/Docker' // Adjust the path to Docker executable as per your system
    }
    stages {
        stage('Build') {
            steps {
                bat 'docker compose build authservice'
            }
        }
        stage('Deploy') {
            steps {
                bat 'docker compose up -d authservice'
            }
        }
          stage('Test') {
            steps {
                bat 'docker compose up test'
            }
        }
    }
}
